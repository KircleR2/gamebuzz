{
    "designSystem": {
      "name": "GameBuzz Gaming Events Platform",
      "version": "1.0.0",
      "description": "Modern gaming events discovery platform with vibrant color scheme and clean UI",
      "category": "Event Discovery Platform",
      "industry": "Gaming & Entertainment",
      
      "colorPalette": {
        "primary": {
          "blue": {
            "hex": "#2563EB",
            "rgb": "37, 99, 235",
            "usage": "Main brand color, hero overlay, primary text, stats numbers"
          }
        },
        "secondary": {
          "mint": {
            "hex": "#10B981",
            "rgb": "16, 185, 129",
            "usage": "Category badges, outline buttons, secondary elements"
          }
        },
        "accent": {
          "orange": {
            "hex": "#DC2525",
            "rgb": "220, 37, 37",
            "usage": "Call-to-action buttons, interactive elements"
          }
        },
        "neutral": {
          "white": "#FFFFFF",
          "gray50": "#F9FAFB",
          "gray100": "#F3F4F6",
          "gray200": "#E5E7EB",
          "gray400": "#9CA3AF",
          "gray500": "#6B7280",
          "gray600": "#4B5563",
          "gray800": "#1F2937",
          "black": "#000000"
        },
        "gradients": {
          "hero": "linear-gradient(135deg, #2563EB, #10B981)",
          "usage": "Hero section background overlay"
        }
      },
  
      "typography": {
        "fontFamilies": {
          "logo": {
            "primary": "Analog BC",
            "fallback": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
            "usage": "Brand logo text"
          },
          "body": {
            "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif",
            "usage": "Body text, general content"
          }
        },
        "fontSizes": {
          "xs": "0.75rem",
          "sm": "0.875rem",
          "base": "1rem",
          "lg": "1.125rem",
          "xl": "1.25rem",
          "2xl": "1.5rem",
          "3xl": "1.875rem",
          "4xl": "2.25rem",
          "5xl": "3rem"
        },
        "fontWeights": {
          "normal": "400",
          "medium": "500",
          "semibold": "600",
          "bold": "700"
        },
        "lineHeights": {
          "tight": "1.25",
          "normal": "1.5",
          "relaxed": "1.75"
        }
      },
  
      "spacing": {
        "container": {
          "maxWidth": "1200px",
          "padding": "0 1rem",
          "center": true
        },
        "sections": {
          "paddingY": "3rem",
          "paddingYLarge": "5rem"
        },
        "components": {
          "padding": "1rem",
          "paddingLarge": "1.5rem",
          "gap": "1rem",
          "gapLarge": "2rem"
        }
      },
  
      "borderRadius": {
        "sm": "0.25rem",
        "md": "0.375rem",
        "lg": "0.5rem",
        "xl": "0.75rem",
        "full": "9999px"
      },
  
      "shadows": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)"
      },
  
      "layout": {
        "grid": {
          "columns": {
            "mobile": "1",
            "tablet": "2",
            "desktop": "4",
            "large": "8"
          },
          "gap": "1.5rem"
        },
        "breakpoints": {
          "sm": "640px",
          "md": "768px",
          "lg": "1024px",
          "xl": "1280px",
          "2xl": "1536px"
        }
      },
  
      "components": {
        "header": {
          "height": "4rem",
          "background": "rgba(255, 255, 255, 0.9)",
          "backdropBlur": "4px",
          "borderBottom": "1px solid #E5E7EB",
          "sticky": true,
          "zIndex": 50,
          "navigation": {
            "gap": "1.5rem",
            "fontSize": "0.875rem",
            "fontWeight": "500"
          },
          "logo": {
            "fontSize": "1.5rem",
            "fontWeight": "700",
            "letterSpacing": "-0.025em"
          }
        },
  
        "hero": {
          "height": "500px",
          "backgroundImage": "url(unsplash-gaming-image)",
          "backgroundSize": "cover",
          "backgroundPosition": "center",
          "overlay": {
            "gradient": "linear-gradient(135deg, #2563EB, #10B981)",
            "opacity": "0.9"
          },
          "content": {
            "textAlign": "center",
            "maxWidth": "4xl",
            "title": {
              "fontSize": "3rem",
              "fontWeight": "700",
              "color": "white",
              "marginBottom": "1rem"
            },
            "subtitle": {
              "fontSize": "1.25rem",
              "opacity": "0.9",
              "marginBottom": "2rem"
            }
          },
          "search": {
            "maxWidth": "28rem",
            "input": {
              "padding": "0.75rem 3rem 0.75rem 2.5rem",
              "background": "rgba(255, 255, 255, 0.1)",
              "backdropBlur": "4px",
              "border": "1px solid rgba(255, 255, 255, 0.2)",
              "borderRadius": "0.5rem",
              "color": "white"
            },
            "button": {
              "position": "absolute right-1 top-1/2",
              "background": "#DC2525",
              "color": "white",
              "padding": "0.5rem 1rem",
              "borderRadius": "0.375rem"
            }
          },
          "stats": {
            "position": "relative",
            "marginTop": "-4rem",
            "background": "white",
            "borderRadius": "0.5rem",
            "padding": "1.5rem",
            "shadow": "0 4px 6px rgba(0, 0, 0, 0.1)",
            "grid": "grid-cols-2 md:grid-cols-4",
            "gap": "1rem"
          }
        },
  
        "categoryCard": {
          "padding": "1rem",
          "borderRadius": "0.5rem",
          "border": "1px solid #E5E7EB",
          "background": "white",
          "hover": {
            "shadow": "0 4px 6px rgba(0, 0, 0, 0.1)",
            "transition": "all 0.2s"
          },
          "icon": {
            "container": {
              "width": "4rem",
              "height": "4rem",
              "borderRadius": "50%",
              "background": "#F3F4F6",
              "display": "flex",
              "alignItems": "center",
              "justifyContent": "center",
              "marginBottom": "0.75rem",
              "hover": {
                "background": "#EBF8FF",
                "transform": "scale(1.1)"
              }
            },
            "size": "2rem",
            "color": "#4B5563",
            "hoverColor": "#2563EB"
          },
          "title": {
            "fontSize": "0.875rem",
            "fontWeight": "500",
            "textAlign": "center"
          }
        },
  
        "eventCard": {
          "borderRadius": "0.5rem",
          "border": "1px solid #E5E7EB",
          "background": "white",
          "overflow": "hidden",
          "hover": {
            "shadow": "0 4px 6px rgba(0, 0, 0, 0.1)",
            "transition": "all 0.2s"
          },
          "image": {
            "aspectRatio": "16/9",
            "objectFit": "cover",
            "hover": {
              "transform": "scale(1.05)",
              "transition": "transform 0.3s"
            }
          },
          "badge": {
            "position": "absolute top-3 left-3",
            "background": "#10B981",
            "color": "white",
            "fontSize": "0.75rem",
            "fontWeight": "600",
            "padding": "0.125rem 0.5rem",
            "borderRadius": "9999px"
          },
          "content": {
            "padding": "1rem",
            "title": {
              "fontSize": "1.125rem",
              "fontWeight": "600",
              "marginBottom": "0.5rem",
              "lineClamp": 2
            },
            "details": {
              "fontSize": "0.875rem",
              "color": "#6B7280",
              "gap": "0.5rem"
            },
            "price": {
              "fontSize": "0.875rem",
              "fontWeight": "500"
            },
            "link": {
              "color": "#DC2525",
              "fontSize": "0.875rem",
              "fontWeight": "500",
              "hover": "opacity-80"
            }
          }
        },
  
        "newsletter": {
          "background": "linear-gradient(135deg, #2563EB, #10B981)",
          "borderRadius": "0.75rem",
          "padding": "2rem md:3rem",
          "grid": "md:grid-cols-2",
          "gap": "2rem",
          "content": {
            "color": "white",
            "title": {
              "fontSize": "1.875rem md:2.25rem",
              "fontWeight": "700",
              "marginBottom": "1rem"
            },
            "description": {
              "opacity": "0.9",
              "marginBottom": "1.5rem"
            },
            "features": {
              "grid": "grid-cols-2",
              "gap": "1rem",
              "marginBottom": "1.5rem"
            }
          },
          "form": {
            "background": "rgba(255, 255, 255, 0.1)",
            "backdropBlur": "4px",
            "border": "1px solid rgba(255, 255, 255, 0.2)",
            "borderRadius": "0.5rem",
            "padding": "1.5rem",
            "input": {
              "background": "rgba(255, 255, 255, 0.1)",
              "border": "1px solid rgba(255, 255, 255, 0.2)",
              "color": "white",
              "placeholderColor": "rgba(255, 255, 255, 0.6)"
            },
            "button": {
              "background": "#DC2525",
              "color": "white",
              "width": "100%",
              "hover": "opacity-90"
            }
          }
        },
  
        "buttons": {
          "primary": {
            "background": "#DC2525",
            "color": "white",
            "padding": "0.5rem 1rem",
            "borderRadius": "0.375rem",
            "fontSize": "0.875rem",
            "fontWeight": "500",
            "hover": "opacity-90",
            "transition": "opacity 0.2s"
          },
          "outline": {
            "border": "2px solid #10B981",
            "background": "transparent",
            "color": "inherit",
            "padding": "0.5rem 1rem",
            "borderRadius": "0.375rem",
            "fontSize": "0.875rem",
            "fontWeight": "500",
            "hover": "background: #10B981, color: white"
          },
          "ghost": {
            "background": "transparent",
            "color": "inherit",
            "padding": "0.5rem 1rem",
            "borderRadius": "0.375rem",
            "fontSize": "0.875rem",
            "fontWeight": "500",
            "hover": "background: rgba(0, 0, 0, 0.05)"
          }
        }
      },
  
      "sections": {
        "hero": {
          "order": 1,
          "height": "500px",
          "background": "gradient overlay on image",
          "content": "title, subtitle, search bar",
          "stats": "overlapping cards with metrics"
        },
        "categories": {
          "order": 2,
          "background": "#F9FAFB",
          "content": "grid of category cards",
          "layout": "2-4-8 columns responsive"
        },
        "featuredEvents": {
          "order": 3,
          "background": "white",
          "content": "grid of event cards",
          "layout": "1-2-4 columns responsive"
        },
        "popularEvents": {
          "order": 4,
          "background": "white",
          "content": "grid of event cards",
          "layout": "1-2-4 columns responsive"
        },
        "newsletter": {
          "order": 5,
          "background": "blue-to-mint gradient",
          "content": "two-column layout with form",
          "layout": "stacked on mobile, side-by-side on desktop"
        },
        "footer": {
          "order": 6,
          "background": "#F9FAFB",
          "content": "four-column layout with links",
          "layout": "stacked on mobile, grid on desktop"
        }
      },
  
      "responsiveDesign": {
        "mobile": {
          "maxWidth": "640px",
          "gridColumns": "1",
          "padding": "1rem",
          "textAlign": "center",
          "navigation": "hidden",
          "buttons": "full width"
        },
        "tablet": {
          "minWidth": "641px",
          "maxWidth": "1023px",
          "gridColumns": "2",
          "padding": "1.5rem",
          "navigation": "visible",
          "buttons": "auto width"
        },
        "desktop": {
          "minWidth": "1024px",
          "gridColumns": "4",
          "padding": "2rem",
          "navigation": "visible",
          "buttons": "auto width"
        }
      },
  
      "interactions": {
        "hover": {
          "cards": "shadow increase, scale transform",
          "buttons": "opacity change",
          "links": "color change",
          "images": "scale transform"
        },
        "transitions": {
          "duration": "0.2s to 0.3s",
          "easing": "ease-out",
          "properties": "all, transform, opacity, color"
        },
        "focus": {
          "outline": "2px solid #2563EB",
          "ring": "0 0 0 2px rgba(37, 99, 235, 0.2)"
        }
      },
  
      "accessibility": {
        "colorContrast": "WCAG AA compliant",
        "focusIndicators": "visible focus rings",
        "semanticHTML": "proper heading hierarchy",
        "altText": "descriptive image alt text",
        "keyboardNavigation": "full keyboard support"
      },
  
      "performance": {
        "images": "optimized formats (WebP, AVIF)",
        "fonts": "system font fallbacks",
        "animations": "GPU-accelerated transforms",
        "loading": "lazy loading for images"
      },
  
      "contentStructure": {
        "header": ["logo", "navigation", "search", "auth buttons"],
        "hero": ["title", "subtitle", "search", "stats"],
        "categories": ["title", "grid of 8 categories", "view all button"],
        "events": ["title", "grid of 4 events", "view all button"],
        "newsletter": ["title", "features", "form"],
        "footer": ["brand info", "quick links", "categories", "newsletter", "copyright"]
      },
  
      "dataStructure": {
        "events": {
          "id": "number",
          "title": "string",
          "image": "url",
          "date": "string",
          "time": "string",
          "location": "string",
          "price": "string",
          "category": "string"
        },
        "categories": {
          "id": "number",
          "title": "string",
          "icon": "LucideIcon component"
        }
      }
    }
  } 